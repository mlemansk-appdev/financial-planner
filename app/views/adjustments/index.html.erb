<p id="notice"><%= notice %></p>

<h1>Adjustments</h1>

<%= link_to 'Add a new adjustment',new_adjustment_path, class: "btn btn-block btn-outline-secondary" %>

<table class="table">
  <thead>
    <tr>
      <th>Payment occurrence</th>
      <th>Loan</th>
      <th>User</th>
      <th>Pmt adjustment</th>
      <th>Beg pay adj</th>
      <th>End pay adj</th>
      <th>Adjustment details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adjustments.each do |adjustment| %>
      <tr>
        <td><%= adjustment.payment_occurrence %></td>
        <td><%= adjustment.loan_id %></td>
        <td><%= adjustment.user_id %></td>
        <td><%= adjustment.pmt_adjustment %></td>
        <td><%= adjustment.beg_pay_adj %></td>
        <td><%= adjustment.end_pay_adj %></td>
        <td><%= adjustment.adjustment_details %></td>
        <td><%= link_to 'Edit', edit_adjustment_path(adjustment) %></td>
        <td><%= link_to 'Delete', adjustment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adjustment', new_adjustment_path %>
