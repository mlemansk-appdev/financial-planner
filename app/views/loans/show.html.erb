  ["Jefferson", "1801-03-03", "1809-03-03"]
] %> -->
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Loan Schedule
    </h1>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render "loans/schedule_details", pmt_schedule: @pmt_schedule, pmt_schedule_adj: @pmt_schedule_adj %>
  </div>
</div>
